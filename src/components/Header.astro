---
import { Image } from "astro:assets";
import logo from "../assets/logo.svg";

const links = [
	{ href: "/archive", text: "Archive" },
	{ href: "/about", text: "About" },
	{ href: "/contact", text: "Contact" },
];
---
<header class="w-full h-[6.75rem] px-[12.5rem] py-[2.125rem] items-center justify-between hidden md:flex">
  <div>
    <a href="/" class="inline-block focus:outline-none focus:ring-2 focus:ring-blue-500 rounded-md">
      <Image src={logo} alt="Logo" width={40} height={40} />
    </a>
  </div>
  <nav class="flex-1 flex justify-center">
    <ul class="flex space-x-6">
      {links.map((link) => (
          <li><a href={link.href} class="hover:text-gray-300 text-palette-brightest-white font-normal focus:outline-none focus:ring-2 focus:ring-blue-500 rounded-md transition-colors">{link.text}</a></li>
      ))}
    </ul>
  </nav>
</header> 