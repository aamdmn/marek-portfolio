---
import { Image } from "astro:assets";

// Import images directly
import tourPoster from "../assets/archive/1.png";
import aerv from "../assets/archive/2.png";
import aec3 from "../assets/archive/3.png";
import orbisLibri from "../assets/archive/4.png";
import rebornPoster from "../assets/archive/5.png";

// Archive items defined inline
const archiveItems = [
	{
		id: 1,
		title: "tour_poster_photoshot_2024.png",
		image: tourPoster,
		position: "col-start-1 col-end-2 row-span-1",
		size: "w-full h-auto",
	},
	{
		id: 2,
		title: "aerv.png",
		image: aerv,
		position: "col-start-3 col-end-4 row-span-1",
		size: "w-full h-auto",
		badges: [
			{ position: "bottom-0 right-0", size: "w-8 h-8" },
			{ position: "top-[-20px] right-[-20px]", size: "w-10 h-10" },
		],
	},
	{
		id: 3,
		title: "aec3.png",
		image: aec3,
		position: "col-start-1 col-end-2 row-span-1",
		size: "w-full h-auto",
	},
	{
		id: 4,
		title: "orbis_libri_logo_blue.png",
		image: orbisLibri,
		position: "col-start-3 col-end-4 row-span-1",
		size: "w-full h-auto",
	},
	{
		id: 5,
		title: "reborn_poster.png",
		image: rebornPoster,
		position: "col-start-2 col-end-3 row-span-1",
		size: "w-full h-auto",
	},
];
---

<div class="w-full bg-background text-palette-brightest-white py-8 min-h-screen">
	<div class="container mx-auto px-4">
		<div class="grid grid-cols-2 grid-rows-3 gap-12 relative">
			<!-- Tour Poster -->
			<div class="relative col-start-1 col-end-1 row-span-1">
				<div class="relative overflow-hidden">
					<img 
						src={tourPoster.src} 
						alt="tour_poster_photoshot_2024.png"
						class="w-full h-auto"
					/>
					<div>
						<p class="text-xs font-mono text-palette-brightest-white">tour_poster_photoshot_2024.png</p>
					</div>
				</div>
			</div>
			
			<!-- AERV -->
			<div class="relative col-start-2 row-span-1">
				<div class="relative overflow-hidden">
					<img 
						src={aerv.src} 
						alt="aerv.png"
						class="w-full h-auto"
					/>
					<div class="">
						<p class="text-xs font-mono text-palette-brightest-white">aerv.png</p>
					</div>
				</div>
			</div>
			
			<!-- AEC3 -->
			<div class="relative col-start-1 row-span-1 mt-16">
				<div class="relative overflow-hidden">
					<img 
						src={aec3.src} 
						alt="aec3.png"
						class="w-full h-auto"
					/>
					<div>
						<p class="text-xs font-mono text-palette-brightest-white">aec3.png</p>
					</div>
				</div>
			</div>
			
			<!-- Orbis Libri -->
			<div class="relative col-start-2 row-span-1 mt-16">
				<div class="relative overflow-hidden">
					<img 
						src={orbisLibri.src} 
						alt="orbis_libri_logo_blue.png"
						class="w-full h-auto"
					/>
					<div>
						<p class="text-xs font-mono text-palette-brightest-white">orbis_libri_logo_blue.png</p>
					</div>
				</div>
				</div>
			
			<!-- Reborn Poster -->
			<div class="relative col-start-1 row-span-1 mt-32">
				<div class="relative overflow-hidden">
					<img 
						src={rebornPoster.src} 
						alt="reborn_poster.png"
						class="w-full h-auto"
					/>
					<div>
						<p class="text-xs font-mono text-palette-brightest-white">reborn_poster.png</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="flex justify-end pr-4 pt-16">
		<a href="/archive" class="text-xs font-mono text-palette-brightest-white hover:text-white transition-colors duration-300">see_full_archive</a>
	</div>
</div>
